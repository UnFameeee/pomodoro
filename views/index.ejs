<%- include('layouts/header') %>

<div class="container">
    <div class="timer-container">
        <div class="cycle-steps">
            <div class="cycle-step" id="stepWork">Work</div>
            <div class="cycle-step" id="stepBreak">Break</div>
            <div class="cycle-step long-break" id="longBreakIndicator">
                <span id="cyclesUntilLongBreak"></span> until Long Break
            </div>
        </div>

        <h2 class="timer-display" id="timer">00:00</h2>
        
        <div class="timer-controls">
            <button class="timer-btn btn-primary" id="startBtn">
                <i class="fas fa-play"></i>
                <span>Start</span>
            </button>
            <button class="timer-btn btn-warning" id="pauseBtn" disabled>
                <i class="fas fa-pause"></i>
                <span>Pause</span>
            </button>
            <button class="timer-btn btn-danger" id="resetBtn">
                <i class="fas fa-redo"></i>
                <span>Reset</span>
            </button>
            <button class="timer-btn btn-secondary" id="skipBtn">
                <i class="fas fa-forward"></i>
                <span>Skip</span>
            </button>
        </div>

        <div class="stats-row">
            <div class="stats-card">
                <i class="fas fa-clock stats-icon"></i>
                <h4>Current Cycle</h4>
                <p class="h2" id="cycleDisplay">1/4</p>
            </div>
            <div class="stats-card">
                <i class="fas fa-check-circle stats-icon"></i>
                <h4>Completed Cycles</h4>
                <p class="h2" id="completedCycles">0</p>
            </div>
            <div class="stats-card">
                <i class="fas fa-fire stats-icon"></i>
                <h4>Daily Streak</h4>
                <p class="h2" id="streak">0 days</p>
            </div>
        </div>
    </div>
</div>

<script src="/js/notifications.js"></script>
<script src="/js/timer.js"></script>

<%- include('layouts/footer') %> 