<%- include('layouts/header') %>

<div class="container">
    <div class="timer-container">
        <div class="cycle-steps">
            <div class="cycle-step" id="stepWork">Work</div>
            <div class="cycle-step" id="stepBreak">Break</div>
            <div class="cycle-step long-break" id="longBreakIndicator">
                <span id="cyclesUntilLongBreak"></span> until Long Break
            </div>
        </div>

        <h2 class="timer-display" id="timer">00:00</h2>
        
        <div class="timer-controls">
            <button class="timer-btn btn-primary" id="startPauseBtn">
                <i class="fas fa-play"></i>
                <span>Start</span>
            </button>
            <button class="timer-btn btn-danger" id="resetBtn">
                <i class="fas fa-redo"></i>
                <span>Reset</span>
            </button>
            <button class="timer-btn btn-secondary" id="skipBtn">
                <i class="fas fa-forward"></i>
                <span>Skip</span>
            </button>
            <button class="timer-btn btn-info" id="resetFullBtn">
                <i class="fas fa-history"></i>
                <span>Reset All</span>
            </button>
        </div>
        
        <div class="stats-row">
            <div class="stats-card">
                <i class="fas fa-clock stats-icon"></i>
                <h4>Current Cycle</h4>
                <p class="h2" id="cycleDisplay">1/4</p>
            </div>
            <div class="stats-card">
                <i class="fas fa-check-circle stats-icon"></i>
                <h4>Completed Cycles</h4>
                <p class="h2" id="completedCycles">0</p>
            </div>
            <!-- <div class="stats-card">
                <i class="fas fa-fire stats-icon"></i>
                <h4>Daily Streak</h4>
                <p class="h2" id="streak">0 days</p>
            </div> -->
        </div>
        
        <div class="settings-info">
            <!-- <details>
                <summary>Current Settings</summary>
                <div id="settingsDebug">Loading settings...</div>
            </details> -->
            <div class="tip">
                <small><i class="fas fa-info-circle"></i> Settings are automatically applied. Double-click the timer to manually refresh.</small>
            </div>
        </div>
    </div>
</div>

<script src="/js/toast.js"></script>
<script src="/js/notifications.js"></script>
<script src="/js/timer.js"></script>

<style>
.settings-info {
    margin-top: 1rem;
    font-size: 0.85rem;
    color: #777;
}

.settings-info .tip {
    margin-top: 0.5rem;
    text-align: center;
    font-style: italic;
}

.settings-info summary {
    cursor: pointer;
    color: var(--primary);
    font-weight: 500;
}

.settings-info details {
    padding: 0.5rem;
    border-radius: 8px;
}

#settingsDebug {
    margin-top: 0.5rem;
    background: rgba(0,0,0,0.05);
    padding: 0.75rem;
    border-radius: 8px;
    white-space: pre-wrap;
    font-family: monospace;
}

@media (prefers-color-scheme: dark) {
    .settings-info {
        color: #aaa;
    }
    
    #settingsDebug {
        background: rgba(255,255,255,0.1);
    }
}
</style>

<%- include('layouts/footer') %> 