<%- include('layouts/header') %>

<div class="container">
    <div class="settings-container">
        <h2 class="settings-title">Timer Settings</h2>
        
        <div class="settings-form">
            <div class="settings-row">
                <div class="setting-group">
                    <label for="workTime">Work Duration (minutes)</label>
                    <input type="number" 
                           id="workTime" 
                           min="1" 
                           max="60" 
                           value="25"
                           class="form-control">
                </div>

                <div class="setting-group">
                    <label for="shortBreak">Short Break Duration (minutes)</label>
                    <input type="number" 
                           id="shortBreak" 
                           min="1" 
                           max="30" 
                           value="5"
                           class="form-control">
                </div>
            </div>

            <div class="settings-row">
                <div class="setting-group">
                    <label for="longBreak">Long Break Duration (minutes)</label>
                    <input type="number" 
                           id="longBreak" 
                           min="1" 
                           max="45" 
                           value="15"
                           class="form-control">
                </div>

                <div class="setting-group">
                    <label for="totalCycles">Total Cycles</label>
                    <input type="number" 
                           id="totalCycles" 
                           min="1" 
                           max="12" 
                           value="4"
                           class="form-control">
                </div>
            </div>

            <div class="settings-row">
                <div class="setting-group">
                    <label for="cyclesBeforeLongBreak">Cycles Before Long Break</label>
                    <input type="number" 
                           id="cyclesBeforeLongBreak" 
                           min="1" 
                           max="100" 
                           value="4"
                           class="form-control">
                </div>
            </div>

            <!-- Notification toggle -->
            <div class="toggle-container">
                <span class="toggle-label">
                    <i class="fas fa-bell"></i>
                    Enable Notifications
                </span>
                <label class="toggle">
                    <input type="checkbox" 
                           id="notifications"
                           class="toggle-input"
                           checked>
                    <span class="toggle-slider"></span>
                </label>
            </div>

            <div class="buttons-container">
                <button class="save-btn" id="saveButton">
                    <i class="fas fa-save"></i>
                    <span>Save Settings</span>
                </button>
                    <!-- <button class="reset-btn" id="resetButton">
                        <i class="fas fa-undo"></i>
                        <span>Reset to Default</span>
                    </button> -->
            </div>
        </div>
    </div>
</div>

<script src="/js/toast.js"></script>
<script src="/js/notifications.js"></script>
<script src="/js/settings-timer.js"></script>

<style>
.settings-container {
    background: var(--white);
    border-radius: 20px;
    padding: 2rem;
    box-shadow: var(--shadow-lg);
    max-width: 500px;
    margin: 2rem auto;
    border: 1px solid rgba(114, 209, 168, 0.1);
}

.settings-title {
    color: var(--dark);
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 2rem;
    text-align: center;
}

.settings-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.settings-row {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
}

.setting-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.setting-group label {
    color: var(--dark);
    font-weight: 500;
    font-size: 0.9rem;
}

.form-control {
    padding: 0.75rem;
    border: 1px solid rgba(114, 209, 168, 0.2);
    border-radius: 12px;
    font-size: 1rem;
    transition: all 0.3s ease;
}

.form-control:focus {
    border-color: var(--primary);
    box-shadow: 0 0 0 2px rgba(114, 209, 168, 0.2);
    outline: none;
}

.save-btn {
    margin-top: 1rem;
    width: 100%;
    padding: 1rem;
}

.buttons-container {
    display: flex;
    gap: 1rem;
}

.save-btn, .reset-btn {
    flex: 1;
    padding: 1rem;
    border-radius: 12px;
    font-weight: 500;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
}

.save-btn {
    background: var(--primary);
    color: white;
    border: none;
}

.reset-btn {
    background: var(--light);
    color: var(--dark);
    border: 1px solid rgba(0, 0, 0, 0.1);
}

.save-btn:hover {
    background: var(--primary-dark);
}

.reset-btn:hover {
    background: #f0f0f0;
}

/* Dark mode */
@media (prefers-color-scheme: dark) {
    .settings-container {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
    }

    .settings-title,
    .setting-group label {
        color: var(--light);
    }

    .form-control {
        background: rgba(255, 255, 255, 0.1);
        border-color: rgba(114, 209, 168, 0.2);
        color: var(--light);
    }

    .form-control:focus {
        background: rgba(255, 255, 255, 0.15);
    }
}
</style>

<%- include('layouts/footer') %> 